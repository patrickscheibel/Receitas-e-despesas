#!/usr/bin/env groovy
pipeline {
    agent { 
        docker { image 'php:8.1.0-alpine' } 
    }
    stages {
        stage('build') {
            steps {
                sh 'composer install && docker-compose up -d && vendor/bin/phinx migrate -e development && php -S localhost:8080'
            }
        }
    }
}
