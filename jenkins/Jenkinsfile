#!/usr/bin/env groovy
pipeline {
    agent {
        dockerfile true
    }
    stages {
        stage('build') {
            steps {
                sh 'composer install'
            }
        }
        stage('database') {
            steps {
                sh 'docker-compose up -d'
            }
        }
        stage('migrations') {
            steps {
                sh 'vendor/bin/phinx migrate -e development'
            }
        }
        stage('tests') {
            steps {
                sh 'vendor/bin/phpunit src/tests'
            }
        }

        stage('Remote SSH') {
            steps {
                sh "sshpass -p 'Patr1@vm' ssh -o StrictHostKeyChecking=no -p 2201 univates@177.44.248.98"
                sh 'ls -a'
            }
        }
    }
}
