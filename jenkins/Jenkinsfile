#!/usr/bin/env groovy
pipeline {
    agent any
    stages {
        stage('build') {
            agent {
                docker {
                    image 'composer:latest'
                }
            }
            steps {
                sh 'composer install'
            }
        }
        stage('database') {
            steps {
                sh 'docker-compose up -d'
            }
        }
        stage('migrations') {
            steps {
                sh 'vendor/bin/phpunit src/tests'
            }
        }
        stage('tests') {
            steps {
                sh 'vendor/bin/phpunit src/tests'
            }
        }
        stage('start') {
            steps {
                sh 'php -S localhost:8080'
            }
        }
    }
}
