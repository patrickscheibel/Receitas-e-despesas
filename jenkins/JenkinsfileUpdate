#!/usr/bin/env groovy
pipeline {
    agent {
        dockerfile true
    }
    stages {
        stage('build') {
            steps {
                sh 'composer install'
            }
        }
        stage('migrations') {
            steps {
                sh 'vendor/bin/phinx migrate -e development'
            }
        }
        stage('tests') {
            steps {
                sh 'vendor/bin/phpunit src/tests'
            }
        }

        stage('Remote SSH') {
            steps {
                sh 'php --version'
            }
        }
    }
}
